<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.cast.turmaformacao.controledeestoque" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".ProductStockApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeMaterial" >
        <activity
            android:name=".controller.activities.ProductListActivity"
            android:label="@string/lbl_products">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".controller.activities.ProductFormActivity"
            android:label="@string/lbl_insert_new_product" />
    </application>

</manifest>
